{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "rootDir": ".",
    "outDir": "build",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
